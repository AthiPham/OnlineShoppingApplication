<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="10dp"
    android:padding="5dp"
    android:background="@drawable/input_design"
    android:elevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/user_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/textview_name_user"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/user_phone_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name_tv"
            android:layout_marginVertical="3dp"

            android:gravity="start"
            android:padding="5dp"
            android:text="@string/textview_phone_user"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/user_password_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_phone_tv"
            android:layout_marginVertical="3dp"
            android:gravity="start"
            android:padding="5dp"
            android:text="@string/textview_password_user"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="italic"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>